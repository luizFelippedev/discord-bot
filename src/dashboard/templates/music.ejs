<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Música</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background: #0f172a;
        color: #e2e8f0;
        margin: 0;
      }
      main {
        max-width: 960px;
        margin: auto;
        padding: 2rem;
      }
      section {
        background: rgba(30, 41, 59, 0.8);
        padding: 1.5rem;
        border-radius: 12px;
        margin-bottom: 1rem;
      }
    </style>
  </head>
  <body>
    <main>
      <h1>Painel de Música</h1>
      <section>
        <h2>Tocando Agora</h2>
        <% if (current) { %>
        <p><strong><%= current.title %></strong> (por <%= current.requestedBy %>)</p>
        <% } else { %>
        <p>Nenhuma música no momento.</p>
        <% } %>
      </section>
      <section>
        <h2>Fila</h2>
        <ul>
          <% queue.forEach((track, index) => { %>
          <li><%= index + 1 %>. <%= track.title %> (por <%= track.requestedBy %>)</li>
          <% }) %>
          <% if (queue.length === 0) { %>
          <li>Fila vazia.</li>
          <% } %>
        </ul>
      </section>
    </main>
  </body>
</html>
